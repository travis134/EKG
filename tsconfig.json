{
    "compilerOptions": {
        "target": "es6",
        "lib": [ "es6", "dom" ],

        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*"
    ]
}
