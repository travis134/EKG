{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",

        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*"
    ]
}
